LOG_LEVEL=fatal

FFMPEG_PATH=C:\ffmpeg\bin\ffmpeg.exe

# Optional: WhatsApp session directory
# SESSION_DIR=./whatsapp-sessions/baileys

# Optional: Baileys store path (persist chats/messages)
# STORE_PATH=./whatsapp-sessions/baileys/store.json

# Optional: Media storage directory
# MEDIA_DIR=./media

# Optional: Public base URL for media links (returned by download_media)
# MEDIA_PUBLIC_BASE_URL=http://localhost:3003

# Optional: Settings file path (persisted runtime settings)
# SETTINGS_PATH=./media/settings.json

# Optional: Upload settings (also configurable via admin page)
# UPLOAD_MAX_MB=50
# UPLOAD_ENABLED=true
# UPLOAD_MAX_FILES=1
# REQUIRE_UPLOAD_TOKEN=false
# UPLOAD_TOKEN=change-me

# Optional: Auto-download media (also configurable via admin page)
# AUTO_DOWNLOAD_MEDIA=false
# AUTO_DOWNLOAD_MAX_MB=50
